<style>
body {
    background-color: black;
    overflow: hidden;
}
h1 {
    text-align: center;
}
h2 {
    text-align: center;
}

input{
    display: block;
    width: 50%;
    padding: 0.375rem 0.75rem;
    font-size: 1rem;
    line-height: 1.5;
    color: #495057;
    border: 1px solid #ced4da;
    border-radius: 0.25rem;
}

.block {
    margin: 15% 20%;
    background-color: #FFFFFF;
    display: flex;
    flex-direction: column;
}
 button{
    background-color: brown;
    color: lightgreen;
    margin-top: 15px;
    margin-left: 40%;
 }
 .form-control{
     margin-left: 30%;
 }
</style>
<div class="block">
    <div class="form">
        <h1>Connexion</h1>
        <h2>Connectez vous pour accéder aux services de nos écurie !</h2>
        {{ form_start(form, {'action': path('app_profil'), 'method': 'POST'}) }}
            {{ form_errors(form) }}
            <div class="form-control">
                {{ form_row(form.email) }}
                {{ form_row(form.password) }}
            </div>
            {{ form_row(form.submit) }}
        {{ form_end(form) }}
    </div>
</div>